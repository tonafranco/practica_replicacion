<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fondo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/IVlogo"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/logo" />

        <ImageView
            android:id="@+id/IVSingIn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@+id/IVlogo"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="37dp"
            app:srcCompat="@mipmap/sign_in" />


        <RelativeLayout
            android:id="@+id/rlEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/IVSingIn"
            android:layout_centerHorizontal="true"
            android:background="@color/black">

            <ImageView
                android:id="@+id/IVIconPerson"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@mipmap/icon_person" />

            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="@string/correo"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rlEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/IVIconPass"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@mipmap/icon_password" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="@string/password"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlPassword"
            android:layout_marginTop="10dp"
            android:text="@string/ftpassword"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19dp" />

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvForgotPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/shape"
            android:text="@string/botonEntrar"
            android:textColor="@color/morewhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/IVBtnTwitter"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/btnEntrar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            app:srcCompat="@mipmap/btn_twitter" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVBtnTwitter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/register"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>